<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="uz.os3ketchup.bozor.presentation.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
        <action
            android:id="@+id/action_mainFragment_to_bazarListFragment"
            app:destination="@id/bazarListFragment" />
    </fragment>
    <fragment
        android:id="@+id/orderFragment"
        android:name="uz.os3ketchup.bozor.presentation.fragments.OrderFragment"
        android:label="fragment_order"
        tools:layout="@layout/fragment_order">

        <action
            android:id="@+id/action_orderFragment_to_partFragment"
            app:destination="@id/partFragment" />
        <action
            android:id="@+id/action_orderFragment_to_productFragment"
            app:destination="@id/productFragment" />
    </fragment>
    <fragment
        android:id="@+id/bazarListFragment"
        android:name="uz.os3ketchup.bozor.presentation.fragments.BazarListFragment"
        android:label="fragment_bazar_list"
        tools:layout="@layout/fragment_bazar_list">
        <action
            android:id="@+id/action_bazarListFragment_to_infoProductFragment"
            app:destination="@id/infoProductFragment" />
        <action
            android:id="@+id/action_bazarListFragment_to_dateProducts"
            app:destination="@id/dateProducts" />
        <action
            android:id="@+id/action_bazarListFragment_to_orderFragment"
            app:destination="@id/orderFragment" />
    </fragment>
    <fragment
        android:id="@+id/infoProductFragment"
        android:name="uz.os3ketchup.bozor.presentation.fragments.InfoProductFragment"
        android:label="fragment_info_product"
        tools:layout="@layout/fragment_info_product" />
    <fragment
        android:id="@+id/dateProducts"
        android:name="uz.os3ketchup.bozor.presentation.fragments.DateProducts"
        android:label="fragment_date_products"
        tools:layout="@layout/fragment_date_products">
        <action
            android:id="@+id/action_dateProducts_to_aboutListFragment"
            app:destination="@id/aboutListFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutListFragment"
        android:name="uz.os3ketchup.bozor.presentation.fragments.AboutListFragment"
        android:label="fragment_about_list"
        tools:layout="@layout/fragment_about_list" />
    <fragment
        android:id="@+id/partFragment"
        android:name="uz.os3ketchup.bozor.presentation.fragments.PartFragment"
        android:label="fragment_part"
        tools:layout="@layout/fragment_part" />
    <fragment
        android:id="@+id/productFragment"
        android:name="uz.os3ketchup.bozor.presentation.fragments.ProductFragment"
        android:label="fragment_product"
        tools:layout="@layout/fragment_product" />
    <fragment
        android:id="@+id/productAddingFragment"
        android:name="uz.os3ketchup.bozor.presentation.fragments.ProductAddingFragment"
        android:label="fragment_product_adding"
        tools:layout="@layout/fragment_product_adding" />
</navigation>